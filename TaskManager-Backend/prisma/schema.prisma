generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String

  folders Folder[]
}

model Folder {
  id     String @id @default(uuid())
  name   String @default("New Folder")
  author User   @relation(fields: [userId], references: [id])
  userId String
  tasks  Task[]

  @@index([userId])
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  priority    Priority
  dueDate     DateTime
  folder      Folder   @relation(fields: [folderId], references: [id])
  folderId    String
  tags        String[]
}
